USE Demobase

CREATE TABLE Un
(
Id INT PRIMARY KEY IDENTITY,
[Name] NVARCHAR(20) NOT NULL
)

CREATE TABLE Un1
(
Un1Id INT PRIMARY KEY IDENTITY,
NameUni1 NVARCHAR(20),
UnId INT FOREIGN KEY
   REFERENCES Un(Id)
 )

INSERT INTO Un([Name])
VALUES ('Pecho'),('Gocho')

SELECT*FROM Un
SELECT*FROM Un1

INSERT INTO Un([Name])
VALUES ('Pecho'),('Gocho')

UPDATE Un
   SET [Name]='Ivan'


   
INSERT INTO Un1([NameUni1],UnId)
VALUES ('PechoUn1',4),('GochoUn1',3)

SELECT*FROM Un1

SELECT * FROM Un
LEFT OUTER JOIN Un1
On Un1.UnId=Un.Id

DELETE Un 
WHERE [Name]='Gocho'




USE Geography

