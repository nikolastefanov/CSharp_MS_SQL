--zad--23

--EU

SELECT TOP(30) [CountryName],[Population] FROM Countries
   WHERE ContinentCode = 'EU'
   ORDER BY [Population] DESC,CountryName ASC

   

   --zad 23(24)*

   SELECT CountryName,CountryCode,
    CASE
	WHEN CurrencyCode = 'EUR' THEN 'Euro'
	ELSE 'Not Euro'
	END [Currency]
	FROM Countries
	ORDER BY CountryName ASC




